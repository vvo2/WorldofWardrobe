<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/rounded_field">

  <ImageView
    android:id="@+id/image_wardrobe"
    android:layout_width="150sp"
    android:layout_height="150sp"
    android:src="@drawable/wardrobe"/>

  <TextView
    android:id="@+id/text_wardrobe_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_toRightOf="@id/image_wardrobe"
    android:layout_margin="@dimen/layout"
    android:textSize="@dimen/h3"
    android:textColor="@color/colorText"/>

  <TextView
    android:id="@+id/text_wardrobe_desc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_toRightOf="@id/image_wardrobe"
    android:layout_below="@id/text_wardrobe_name"
    android:layout_margin="@dimen/layout"
    android:textSize="@dimen/h4"
    android:textColor="@color/colorText"/>

</RelativeLayout>