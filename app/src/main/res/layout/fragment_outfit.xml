<android.support.percent.PercentRelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/outfit_fragment"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="edu.cnm.deepdive.worldofwardrobe.fragments.OutfitFragment">

  <!-- TODO: Update blank fragment layout -->


  <ImageView
    android:id="@+id/img_top"
    app:layout_widthPercent="50%"
    app:layout_heightPercent="40%"/>

  <ImageView
    android:id="@+id/img_head"
    app:layout_widthPercent="25%"
    app:layout_heightPercent="20%"
    android:layout_toRightOf="@id/img_top"/>

  <ImageView
    android:id="@+id/img_neck"
    app:layout_widthPercent="25%"
    app:layout_heightPercent="20%"
    android:layout_toRightOf="@id/img_top"
    android:layout_below="@id/img_head"/>
  <ImageView
    android:id="@+id/img_bottom"
    app:layout_widthPercent="50%"
    app:layout_heightPercent="40%"
    android:layout_below="@id/img_top"/>

  <ImageView
    android:id="@+id/img_hand"
    app:layout_widthPercent="25%"
    app:layout_heightPercent="20%"
    android:layout_toRightOf="@id/img_bottom"
    android:layout_below="@id/img_neck"/>

  <ImageView
    android:id="@+id/img_outer"
    app:layout_widthPercent="50%"
    app:layout_heightPercent="40%"
    android:layout_toRightOf="@id/img_bottom"
    android:layout_below="@id/img_hand"/>

  <ImageView
    android:id="@+id/img_shoe"
    app:layout_widthPercent="25%"
    app:layout_heightPercent="20%"
    android:layout_below="@id/img_bottom"/>

  <ImageView
    android:id="@+id/img_shoe2"
    app:layout_widthPercent="25%"
    app:layout_heightPercent="20%"
    android:layout_toRightOf="@id/img_shoe"
    android:layout_below="@id/img_bottom"/>

  <TextView
    android:id="@+id/outfit_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/colorPrimaryDark"
    android:text="@string/outfit_fragment"
    android:textSize="@dimen/h4"
    android:layout_toRightOf="@id/img_head"/>

</android.support.percent.PercentRelativeLayout>