<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/rounded_field">

  <ImageView
    android:id="@+id/image_item_tops"
    android:layout_width="200sp"
    android:layout_height="200sp"/>

  <TextView
    android:id="@+id/text_item_tops_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/image_item_tops"
    android:layout_margin="@dimen/layout"
    android:textSize="@dimen/h3"
    android:textColor="@color/colorText"/>

  <TextView
    android:id="@+id/text_item_tops_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/image_item_tops"
    android:layout_below="@id/text_item_tops_name"
    android:layout_margin="@dimen/layout"
    android:textSize="@dimen/h4"
    android:textColor="@color/colorText"/>

</RelativeLayout>